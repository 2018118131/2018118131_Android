<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mrkj.healthylife.activity.SettingHealthyHealthyActivity">

    <TextView
        android:id="@+id/to_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/width_size_5"
        android:background="@drawable/shape_btn_back_background"
        android:drawableLeft="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_20"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/width_size_5"
            android:background="@drawable/shape_btn_back_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/plan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_size_5"
                android:layout_marginTop="@dimen/width_size_5"
                android:gravity="center"
                android:text="计划类型"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/width_size_5"
                android:gravity="center"
                android:text="@string/dialog_title"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
